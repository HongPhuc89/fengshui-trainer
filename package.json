{
  "name": "quiz-game-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "Quiz Game - Turborepo Monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:all": "turbo run dev",
    "dev:backend": "turbo run dev --filter=@quiz-game/backend",
    "dev:admin": "turbo run dev --filter=@quiz-game/admin",
    "dev:mobile": "turbo run dev --filter=mobile",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "backend:dev": "turbo run dev --filter=@quiz-game/backend",
    "backend:build": "turbo run build --filter=@quiz-game/backend",
    "backend:migration:run": "npm run migration:run --workspace=@quiz-game/backend",
    "backend:migration:generate": "npm run migration:generate --workspace=@quiz-game/backend",
    "backend:create-admin": "npm run create:admin --workspace=@quiz-game/backend",
    "deploy": "bash deploy-simple.sh",
    "deploy:vps": "npm run backend:build && bash deploy-simple.sh",
    "deploy:admin": "npm run admin:build && firebase deploy --only hosting",
    "admin:build": "npm run build --workspace=@quiz-game/admin",
    "admin:serve": "firebase serve --only hosting",
    "env:edit": "bash vps-env-edit.sh"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.4.2",
    "turbo": "^2.6.2",
    "typescript": "5.7.2"
  },
  "lint-staged": {
    "apps/backend/**/*.{ts,js}": [
      "eslint --fix --config apps/backend/eslint.config.js",
      "prettier --write"
    ],
    "apps/backend/**/*.{json,md}": [
      "prettier --write"
    ],
    "apps/admin/**/*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "apps/mobile/**/*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "packages/**/*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "packageManager": "npm@10.9.2",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
